<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/p_exit_bg"
        android:layout_marginTop="5dp">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_look_vod"
                style="@style/text_42_ffffff"/>
            <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="30dp">
            	
            	 <Button 
            	    android:id="@+id/p_eixt_sure"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:text="@string/sure"
            	    android:background="@drawable/bg_p_exit"
            	    android:layout_alignParentRight="true"
            	    android:padding="10dp"
            	    android:textColor="@drawable/color_p_exit"
            	    android:textSize="20sp"
            	    />
            	 
            	 <Button 
            	    android:id="@+id/p_eixt_cancel"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:text="@string/cancels"
            	    android:background="@drawable/bg_p_exit"
            	    android:layout_alignParentLeft="true"
            	    android:padding="10dp" 
            	    android:textSize="20sp"
            	    android:textColor="@drawable/color_p_exit"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>
</LinearLayout>
